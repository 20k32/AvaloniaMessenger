<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DesktopClient.Views.UISearchedMessage">
  <Border Classes="UIBorder"
          Background="Bisque"
          x:Name="Ui_Border">
    <Grid ColumnDefinitions="Auto, Auto, Auto">
      <PathIcon Data="{StaticResource LetterIcon}"
                Classes="UIPathIcon"
                Grid.Column="0"
                Margin="2, 0, 0, 0"/>
      <Panel Width="{Binding #Ui_Border.BorderThickness.Left}"
             Classes="UIPanel"
             Grid.Column="1"/>
      <TextBlock x:Name="LetterTextBlock"
                 Classes="UITextBlock"
                 Grid.Column="2"/>
    </Grid>
  </Border>
</UserControl>
