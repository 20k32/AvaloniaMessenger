<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DesktopClient.Views.UISearchedMessage">
  <Border Classes="UIBorder"
          Background="Bisque"
          x:Name="UI_Border">
    <StackPanel Classes="UIStackPanel">
      <PathIcon Data="{StaticResource LetterIcon}"
                Classes="UIPathIcon"/>
      <Panel Classes="UIPanel"
             Width="{Binding #UI_Border.BorderThickness.Left}"/>
      <TextBlock x:Name="LetterTextBlock"
                 Classes="UITextBlock"/>
    </StackPanel>
  </Border>
</UserControl>
