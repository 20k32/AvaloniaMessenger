<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:DesktopClient.Views">
  <Design.PreviewWith>
    <controls:UIMessage />
  </Design.PreviewWith>

  <Style Selector="controls|UIMessage">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid ColumnDefinitions="Auto, 10">
          <Border Grid.Column="0"
                  Background="Yellow"
                  CornerRadius="4, 4, 0, 4">
            <TextBlock Text="Message From client"
                       x:Name="MessageTextBlock"
                       HorizontalAlignment="Left"/>
          </Border>

          <!-- Symmetric transofrm (not rotatetransofrm!) this in codebehind -->
          <Canvas Grid.Column="1"
                  Width="10"
                  Height="10"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Left">
            <Path Fill="Yellow">
              <Path.Data>
                <PathGeometry>
                  <PathFigure>
                    <LineSegment Point="0, 0"/>
                    <LineSegment Point="10, 5"/>
                    <LineSegment Point="0, 10"/>
                  </PathFigure>
                </PathGeometry>
              </Path.Data>
            </Path>
          </Canvas>
          </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
