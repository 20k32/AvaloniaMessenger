<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:DesktopClient.Views"
             mc:Ignorable="d"
             x:Class="DesktopClient.Views.UIUser"
             x:DataType="views:UIUser"
             x:Name="UIUserControl">
  <Border Classes="UIBorder"
          Background="Beige"
          x:Name="Ui_Border">
    <Grid ColumnDefinitions="Auto, Auto, Auto, *">
      <PathIcon Data="{StaticResource AnotherUserIcon}"
                Classes="UIPathIcon"
                Grid.Column="0"
                Margin="0, 2, 0, 2"/>
      <Panel Width="{Binding #Ui_Border.BorderThickness.Left}"
             Classes="UIPanel"
             Grid.Column="1"/>
      <TextBlock x:Name="UserNameTextBlock"
                 Classes="UITextBlock"
                 Grid.Column="2"/>
      <TextBlock Grid.Column="3" 
                 Text="{Binding #UIUserControl.UnreadMessages, Converter={StaticResource UnreadCountConverter}}"
                 Classes="UITextBlock"
                 HorizontalAlignment="Right"/>
    </Grid>
  </Border>

</UserControl>
